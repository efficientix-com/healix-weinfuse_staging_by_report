{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "printWidth": 120,
        "tabSize": 2,
        "useTabs": false,
        "endOfLine": "lf"
      }
    ],
    "no-undef": "off"
  }
}
